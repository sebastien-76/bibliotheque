<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bibliothèque{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous" defer></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <div class="container">
            <div class="row">
                <div class="col">
                    <nav class="navbar navbar-expand-lg bg-body-tertiary">
                        <div class="container-fluid">
                            <a class="navbar-brand" href="{{ path('app_accueil') }}">Bibliothèque</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <li class="nav-item">
                                        <a class="nav-link active" aria-current="page" href="{{ path('app_accueil') }}">Accueil</a>
                                    </li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li class="nav-item">
                                            <a class="nav-link active" aria-current="page" href="{{ path('app_admin_user_index') }}">Utilisateurs</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" aria-current="page" href="{{ path('app_admin_livre_index') }}">Livres</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" aria-current="page" href="{{ path('app_admin_auteur_index') }}">Auteurs</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" aria-current="page" href="{{ path('app_admin_genre_index') }}">Genres</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" aria-current="page" href="{{ path('app_admin_emprunteur_index') }}">Emprunteurs</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" aria-current="page" href="{{ path('app_admin_emprunt_index') }}">Emprunts</a>
                                        </li>

                                    {% endif %}



                                </ul>
                                {% if app.user %}
                                    <div class="mb-3">
                                        Bonjour {{ app.user.userIdentifier }},  <a href="{{ path('app_profile_show') }}">Mon compte </a> <a href="{{ path('app_logout') }}"> Déconnexion</a>
                                    </div>
                                {% else %}
                                    <div class="mb-3">
                                        <a href="{{ path('app_login') }}">Connexion</a>
                                    </div>  
                                {% endif %}
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        {% endblock %}

        {% block body %}{% endblock %}
    </body>
</html>
